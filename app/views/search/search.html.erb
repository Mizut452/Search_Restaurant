<!DOCTYPE html>
<html>
  <head>
    <title>レストラン探します</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <div class="container">
    <% @results.each do |d| %>
     <div>
        <h2><%= d[:name] %></h2>
        <p><%= d[:access] %></p>
     </div>
    <% end %>
  </div>

  <table border="1">
    <thead>
      <tr>
        <th>店名</th>
        <th>アクセス</th>
      </tr>
    </thead>

    <tbody>
      <% @results.each do |d| %>
        <tr>
          <td><%= link_to d[:name], search_result_path(id: d[:id]) %></td>
          <td><%= d[:access] %></td>
          <td><%= d[:open] %></td>
        </tr>
        <% end %>
    </tbody>
  </table>
  </body>
</html>
